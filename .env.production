# Elite Alpha Mirror Bot - Production Configuration
# CRITICAL: Review all settings before deployment!

# ==========================================
# ENVIRONMENT SETTINGS
# ==========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ==========================================
# RISK MANAGEMENT (CRITICAL!)
# ==========================================
# Maximum capital to risk (NEVER exceed this!)
MAX_CAPITAL=1000.00
# Maximum position size (percentage of capital)
MAX_POSITION_SIZE=0.10
# Maximum positions at once
MAX_POSITIONS=3
# Maximum daily loss before shutdown
MAX_DAILY_LOSS=100.00
# Emergency stop loss percentage
EMERGENCY_STOP_LOSS=0.05
# Minimum confidence score required
MIN_CONFIDENCE_SCORE=0.80

# ==========================================
# TRADING PARAMETERS
# ==========================================
STARTING_CAPITAL=100.00
SLIPPAGE_TOLERANCE=0.02
MIN_LIQUIDITY=100000.0
STOP_LOSS_PERCENT=0.20
TAKE_PROFIT_PERCENT=3.00
MAX_GAS_PRICE=50000000000
PRIORITY_GAS_BOOST=2000000000

# ==========================================
# API CONFIGURATION
# ==========================================
# Ethereum RPC (REQUIRED)
ETH_HTTP_URL=YOUR_ETHEREUM_RPC_URL_HERE
ETH_WS_URL=YOUR_ETHEREUM_WS_URL_HERE

# Etherscan (REQUIRED)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY_HERE

# OKX DEX API (REQUIRED - USE TESTNET FIRST!)
OKX_API_KEY=YOUR_OKX_API_KEY_HERE
OKX_SECRET_KEY=YOUR_OKX_SECRET_KEY_HERE
OKX_PASSPHRASE=YOUR_OKX_PASSPHRASE_HERE
OKX_BASE_URL=https://www.okx.com

# ==========================================
# WALLET CONFIGURATION
# ==========================================
WALLET_ADDRESS=YOUR_WALLET_ADDRESS_HERE
# NEVER store private keys in env files!
# Use secure key management instead

# ==========================================
# MONITORING & ALERTS
# ==========================================
DISCORD_WEBHOOK=YOUR_DISCORD_WEBHOOK_HERE
SLACK_WEBHOOK=YOUR_SLACK_WEBHOOK_HERE
EMAIL_ALERTS=your-email@example.com

# ==========================================
# DATABASE
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=elite_bot_prod
DB_USER=elite_bot
DB_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# ==========================================
# REDIS CACHE
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# ==========================================
# RATE LIMITING
# ==========================================
ETHERSCAN_DELAY=0.2
OKX_API_DELAY=0.1
HTTP_TIMEOUT=10
MAX_RETRIES=3
CONNECTION_POOL_SIZE=50

# ==========================================
# PAPER TRADING (ENABLE FOR TESTING!)
# ==========================================
PAPER_TRADING_MODE=true
SIMULATION_MODE=true
